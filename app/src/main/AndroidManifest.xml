            android:name=".Condominio.PedidoManutencao"
            android:label="@string/title_activity_pedido_manutencao"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar" />

        <service
            android:name=".Services.BackgroundPostService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".Services.BackgroundGetService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".tentativa"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".PrincipalActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_princiapl"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginRegisto.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".Condominio.CalendarActivity" />
        <activity android:name=".MarcacaoAssembleia" />
        <activity android:name=".Condominio.ChatCondominio" />
        <activity android:name=".Sensors.SensorSwitch" />
        <activity android:name=".LoginRegisto.Registar" />
        <activity android:name=".PostBD" />
        <activity android:name=".GetBD" />
        <activity android:name=".Sensors.ConfigSensors" />
    </application>

</manifest>