<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mestrado.ipg.mcmstore">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_building"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_building"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".Sensors.ChartLuminosity"
            android:label="@string/title_activity_chart_luminosity"></activity>
        <activity
            android:name=".Sensors.ChartGas"
            android:label="@string/title_activity_chart_gas" />
        <activity
            android:name=".Sensors.ChartTemperature"
            android:label="@string/title_activity_charts" />
        <activity
            android:name=".Sensors.ChartHumidity"
            android:label="@string/title_activity_chart_humidity" />

        <service
            android:name=".Services.BackgroundPostService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".Services.BackgroundGetService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".Services.BackgroundPostServiceAuth"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".Services.BackgroundGetServiceAuth"
            android:enabled="true"
            android:exported="true" />
        <service android:name="mestrado.ipg.mcmstore.Sensors.Charts"></service>

        <activity
            android:name=".LoginRegisto.LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PrincipalActivity" />
        <activity android:name=".Condominio.CalendarActivity" />
        <activity android:name=".Condominio.ChatCondominio" />
        <activity android:name=".Condominio.SalaChat" />
        <activity android:name=".Administrador.MarcacaoAssembleia" />
        <activity android:name=".Sensors.SensorSwitch" />
        <activity android:name=".LoginRegisto.Registar" />
        <activity android:name=".Sensors.ConfigSensors" />
        <activity android:name=".Administrador.Ficheiros" />
        <activity android:name=".Administrador.Manutencoes" />
        <activity android:name=".Administrador.Reservas" />
        <activity android:name=".Administrador.Comunicados" />
        <activity android:name=".Condominio.PedidoReserva" />
        <activity android:name=".Condominio.PedidoManutencao" />
    </application>

</manifest>